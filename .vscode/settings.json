{
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.tabSize": 2
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.tabSize": 2
  },
  "editor.wordWrapColumn": 120,
  "files.associations": {
    "*.mdx": "markdown",
    "*.css": "tailwindcss"
  },
  "files.exclude": {
    ".husky/": true,
    "**/.cache": true,
    "**/.DS_Store": true,
    "**/.next": true,
    "**/.output": true,
    "**/.pnpm": true,
    "**/.turbo": true,
    "**/.yarn": true,
    "**/build": true,
    "**/coverage": true,
    "**/dist": true,
    "**/node_modules": true,
    "src/convex/_generated/": true,
    "next-env.d.ts": true,
    "tsconfig.tsbuildinfo/": true
  },
  "search.exclude": {
    "**/.venv/": true,
    "**/node_modules/": true
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.updateImportsOnFileMove.enabled": "always"
}
